{% extends "base.html" %}

{% block jumbotron %}
  
     <!-- Main jumbotron for a primary marketing message or call to action -->
    <div class="jumbotron">
      <div class="container">
        <h2>Wilkommen bei diary</h2>
        <p>Bitte melden sie sich mit ihrer email Adresse und ihrem Passwort an.
       </p>
      </div>
    </div>

  </div> <!-- /container -->
