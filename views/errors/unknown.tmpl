
{% extends base_error.tmpl %}
{% block error %}
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="error-template">
                <h1>
                    Oops!</h1>
                <h2>
                    Unknown Error</h2>
                <div class="error-details">
                    Sorry, an unknown error has occured, Requested page {{page}} or method can not be found!
                </div>
                <div class="error-actions">
                    <a href="/login" class="btn btn-primary btn-lg"><span class="glyphicon glyphicon-home"></span>
                        Take Me Home </a><a href="http://www.pythononwheels.org" class="btn btn-default btn-lg"><span class="glyphicon glyphicon-envelope"></span> Contact Support </a>
                </div>
            </div>
        </div>
    </div>
</div>
{% end %}