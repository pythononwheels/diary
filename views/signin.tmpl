{% extends "base.tmpl" %}

{% block css %}
<style>

  html {
    background-image: url("{{static_url("images/The-Austerity-Diaries.jpg")}}");
  }
  
  body {
    background-color: white;
  }

</style>
{% end %}

{% block jumbotron %}
    <section class="jumbotron text-center">
      <div class="container">
        <h2 class="jumbotron-heading">Willkommen bei diary</h1>
        <p class="lead text-jumbotron">Melde dich einfach mit deiner email Adresse an und du kannst sofort loslegen.</p>
      </div>
    </section>
{% end %}

{% block content %}

  <form action="/login/signin" method="POST" class="form-signin">
      <label for="login" class="sr-only">email Adresse</label>
      <input type="email" id="login" name="login" class="form-control focusedInput" placeholder="email@adress.here" autofocus required>
      <label for="password" class="sr-only">passwort</label>
      <input type="password" id="password" name="password" class="form-control" placeholder="Passwort" required>
      <label for="password2" class="sr-only">passwort wiederholen</label>
      <input type="password" id="password2" name="password2" class="form-control" placeholder="Passwort wiederholen" required>
      <button class="btn  btn-success btn-block" type="submit">Anmelden</button>
  </form>


{% end %}    


{% block script %}

{% end %}
