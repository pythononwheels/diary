{% extends "base_logged_in.tmpl" %}



{% block content %}
     <div class="container">
        <h2>Neuen user anlegen</h2>

      </div>
    <hr>
    <div class="col-sm-2">
      &nbsp;
    </div>
    <div class="col-sm-8">
      <form action="/user/new" method="post">
       
          <div class="form-group row">
            <label for="swbkuerzel" class="col-sm-2 form-control-label">swbkürzel</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" id="swbkuerzel" name="swbkuerzel" placeholder="swbkuerzel" required autofocus>
            </div>
          </div>

         <div class="form-group row">
            <label for="role" class="col-sm-2 form-control-label">Rolle</label>
            <div class="col-sm-10">
              <select class="form-control" id="role" name="role" required>
                <option selected>user</option>
                <option>admin</option>
              </select>
            </div>
          </div>

          <div class="form-group row">
            <label for="password" class="col-sm-2 form-control-label">Passwort</label>
            <div class="col-sm-10">
              <input type="password" class="form-control" id="password" name="password" required>
            </div>
          </div>

          <div class="form-group row">
            <label for="plots" class="col-sm-2 form-control-label">plots</label>
            <div class="col-sm-10">
              {% for plot in plots %}
                <div class="checkbox">
                  <label>
                    <input type="checkbox" name="plots" id="plots" value="{{plot["plot_name"]}}">
                    {{plot["plot_name"]}}
                  </label>
                </div>
              {% end %}
            </div>
          </div>

          <hr>
          <div class="form-group row">
            <div class="col-sm-4">
              &nbsp;
            </div>
            <div class="col-sm-4">
              <a href="/mavs/index" type="button" class="btn btn-primary btn-block">Zurück</a>
            </div>
            <div class="col-sm-4">
              <button class="btn btn-success btn-block" type="submit">Anlegen</button>
            </div>
          </div>
        </form>
      </div>
      <div class="col-sm-2">
      &nbsp;
    </div>
   
{% end %}
    





